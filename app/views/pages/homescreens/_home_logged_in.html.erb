  <%= stylesheet_link_tag "home_logged_in.css" %>

  <div class="container">
  	<div class="row">
  		<div class="col-lg-3">
  		</div>
  		<div class="col-lg-6">
  			<div class="card search-card">
  				<div class="card-body">
  					<div class="card-title">
  						<h6>Søk etter artikler
                <a href="/articles/new" class="btn btn-primary article_upload_button">Last opp artikkel</a></h6>
              </div>
              <!-- Search form -->
              <div class="md-form mt-0">
                <%= form_tag articles_path, :method => :get do %>
                <%= text_field_tag :search, params[:search], placeholder: "Søk blant #{Article.count} artikler", class: "form-control", id: 'searchfield'%>
              </div>
              <!---->
            </div>
            <span class="search-box-links"><a href="#" class="card-link">Avansert søk</a></span>
          </div>

          <ul class="nav nav-tabs">
            <li class="nav-item">
             <a class="nav-link active" href="#">Siste</a>
           </li>
           <li class="nav-item">
             <a class="nav-link" href="#">Populære akkurat nå</a>
           </li>
           <li class="nav-item">
             <a class="nav-link" href="#">Høyest rangerte</a>
           </li>
         </ul>


         <% @articles.each do |article| %>
         <div class="card article-container">
          <div class="card-body">
             <div class="row">
              <div class="col-9">
                <div class="box">
                <%= image_tag article.user.avatar.url(:post_thumb), class: 'rounded-image', style: 'float:left;'%>
                <span class="uploader">
                  <%= link_to article.user do %> 
                    <%= article.user.first_name %> <%= article.user.last_name %>
                  <%end%>
                  <br>
                  la til en  artikkel</span>         
                </div>
              </div>
              <div class="col-3">
                <span class="time-ago" style="float:right; opacity: 0.6"><%= time_ago_in_words(article.created_at)%></span> 
              </div>
            </div>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= article.title%></h5>
                <%= link_to 'Les mer', article%>
              </div>
            </div>
         </div>
       </div>
       <%end%>
       <%end%>
     </div>
     <div class="col-lg-3">
     </div>
   </div>
 </div>


