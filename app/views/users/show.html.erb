<%= stylesheet_link_tag "profilepage.css" %>
<body>
	<div class="card">
		<div class="card-body">
			<div class="container">
				<div class="box">
					<%= image_tag @user.avatar.url(:profile_page_image), class: 'profile-image'%>
					<span class="username"><h5>
						<%= @user.first_name %> <%= @user.last_name %></h5>
						<h6><%= @user.title %> ved <%= @user.workplace %></h6>
						<p><%= @user.workcommune %></p>
					</span>
				</div>
				<ul class="nav nav-pills mb-3 lol" id="pills-tab" role="tablist">
					<li class="nav-item">
						<a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Artikler</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</a>
					</li>
				</ul>
			</div>
		</div>
	</div>


	<div class="body">
		<div class="container">
			<div class="tab-content" id="pills-tabContent">
				<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

				</div>
				<div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
					<div class="row content-row">
						<div class="col-lg-3">
							<div class="card">
								<div class="card-body">
									<div class="card-title">
										<h6>Artikler</h6>
										<hr>
										<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
											<a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Opplastede artikler (<%= @articles.count %>) </a>
											<a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Lagrede artikler</a>
											<a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Fane 3</a>
											<a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Fane 4</a>
										</div>

									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-7">
							<div class="tab-content" id="v-pills-tabContent">
								<div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
									<% @articles.each do |article| %>
									<div class="card article-card">
										<div class="card-body">
											<p>Artikler</p>
											<hr>
											<div class="card-title">
												<h6><%= article.title %></h6>
												<%= link_to 'Rediger', edit_article_path(article), class: 'btn btn-primary' %>
											</div>
										</div>
									</div>
									<%end%>
								</div>
								<div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">Lagrede artikler
								</div>
								<div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">Ny fane</div>
								<div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">Enda en fane</div>
							</div>
						</div>		
					</div>
				</div>
				<div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
					<div class="row content-row">
				 <div class="col-lg-3">
				 </div>
				 <div class="col-lg-9">
				 	<h3>Kontaktinfo</h3>
				 </div>
				</div>
				</div>
			</div>
		</div>
	</div>
</body>








<p><%= @user.method %></p>
<p><%= @user.workcommune %></p>
<p><%= @user.email %></p>
<p><%= @user.competance %></p>
